<UserControl x:Class="netretis.PopupSplash"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    FontFamily="{StaticResource PhoneFontFamilyNormal}"
    FontSize="{StaticResource PhoneFontSizeNormal}"
    Foreground="{StaticResource PhoneForegroundBrush}"
    d:DesignHeight="800" d:DesignWidth="480">

    <Grid x:Name="LayoutRoot" Background="White" Width="480" Height="800">
        
        <Image Height="800" HorizontalAlignment="Left" Name="image1" Stretch="Fill" VerticalAlignment="Top" Width="480" Source="SplashScreenImage.png" />
        <TextBlock HorizontalAlignment="Left" Margin="63,608,0,147" Name="textBlock1" Text="{Binding Path=Localizedresources.loading, Source={StaticResource LocalizedStrings}}" Width="355" Foreground="Black" FontSize="30" TextAlignment="Center" />
        <ProgressBar HorizontalAlignment="Left" Margin="12,645,0,136" Name="progressBar1" Width="383" Foreground="Black"  />
    </Grid>
</UserControl>
