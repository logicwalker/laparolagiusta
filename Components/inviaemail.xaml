<UserControl x:Class="netretis.inviaemail"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
   
    mc:Ignorable="d"
    FontFamily="{StaticResource PhoneFontFamilyNormal}"
    FontSize="{StaticResource PhoneFontSizeNormal}"
    Foreground="{StaticResource PhoneForegroundBrush}"
    d:DesignHeight="800" d:DesignWidth="480"  >



    <StackPanel Background="{StaticResource TransparentBrush}"  >
        <TextBox Height="72" Name="textBox1" Text="Vuoi scrivere ad Ennio Peres ?" Width="460" />
        <Button x:Name="btnSendEmail" Content="{Binding Path=Localizedresources.sendEmail, Source={StaticResource LocalizedStrings}}" Margin="0,5" Click="btnSendEmail_Click" Background="SteelBlue" />
    </StackPanel>
</UserControl>
